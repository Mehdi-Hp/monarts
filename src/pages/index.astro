---
import RootLayout from "#layouts/Root.astro";
import BaseLayout from "#layouts/Base.astro";
import Wrapper from '#layouts/Wrapper.astro';
import BetterPicture from '#components/BetterPicture.astro';
import Spacer from '#components/Spacer.astro';
import Blob from '#components/Blob.astro';
import Icon from '#components/Icon.astro';
import DotDivider from '#components/DotDivider.astro';
import Gallery from '#components/Gallery.astro';
import WorkDetails from '#components/WorkDetails.astro';


const workExperiences = [
	{
		from: 'Jan 2022',
		to: 'Present',
		name: 'SAADÉ CREATIVE SOLUTIONS',
		website: 'https://www.saade.agency/',
		instagram: 'https://www.instagram.com/sadehstudio/?hl=en',
		twitter: 'https://twitter.com/saadeagency?lang=en'
	},
	{
		from: 'Jul 2021',
		to: 'Nov 2022',
		name: 'SNAPP MARKET',
		website: 'https://snapp.market/',
		instagram: 'https://www.instagram.com/snappmarket/?hl=en'
	},
	{
		from: 'Apr 2019',
		to: 'Jul 2021',
		name: 'FOUR MIND ADVERTISING AGENCY',
		website: 'https://fourmind.co/',
		instagram: 'https://www.instagram.com/fourmind/?hl=en'
	},
	{
		from: 'Jun 2017',
		to: 'Dec 2018',
		name: 'SIEMENS',
		instagram: 'https://www.instagram.com/siemens.co/?hl=en'
	},
	{
		from: 'Apr 2015',
		to: 'Nov 2016',
		name: 'SONZ GMBH'
	}
]
---

<RootLayout>
	<BaseLayout>
		<h1 id="portfolio" sr-only>
			Mona Safavi's portfolio
		</h1>
		<section
			aria-labelledby="my-story"
			class:list={['myStory', '/pos:relative']}
		>
			<h2 id="my-story" sr-only>
				My story
			</h2>
			<Wrapper
				class:list={['intro']}
				content-class:list={[
					'/flex:row/y:end',
					'/gap:6',
					'@md-n-below:/flex:column/x:center',
					'@md-n-below:/gap:4'
				]}
			>
				<BetterPicture
					name="Mon-1"
					alt="Mona Safavi's illustration of herself"
					width={640}
					height={800}
					loading="lazy"
					formats={['avif', 'webp', 'png']}
					class:list={[
						'/w:80',
						'@xl:/w:62',
						'@lg:/w:55',
						'@md:/w:70',
						'@md:/translate:<-10x_0>',
						'@sm:/w:50',
						'@sm:/translate:<-10x_0>',
						'@xs-n-below:/w:full'
					]}
				/>
				<p class:list={['/type:display-header2-normal:1.2']}>
					<span class="/color:primary-alt-base">
						Hey,
					</span>
					<br />
					<span class="/color:primary-alt-base">
						I’m Mona, <br />
					</span>
					and this is my portfolio.
				</p>
			</Wrapper>

			<Wrapper
				class:list={[
					'@md:/mt:8',
					'@sm-n-below:/mt:4'
				]}
				content-class:list={['/pos:relative']}
			>
				<div class:list={['/pos:relative']}>
					<p class:list={[
						'/type:display-header1-normal:1.2',
						'/color:primary-alt-base',
						'/grow:1'
					]}>
						I am a <br /> self educated <br /> graphic designer
					</p>
					<Icon
						name={'path-1'}
						class:list={[
							'/w:20', '/pos:absolute', '/r:-40', '/t:0',
							'@xl:/t:-20', '@xl:/r:-20',
							'@lg:/t:-20', '@lg:/r:-20', '@lg:/w:15',
							'@md:/t:-20', '@md:/r:-20', '@md-n-below:/w:12',
							'@sm:/t:-20', '@sm:/r:20',
							'@xs-n-below:/t:-30', '@xs-n-below:/r:5'
						]}
					/>
					<Blob color={'yellow'} class:list={['/r:-80']} />
				</div>
			</Wrapper>

			<Wrapper content-class:list={['/type:mono-body-normal:1.3', '/type:center']}>
				<div
					class:list={[
						'/grid:<1fr_1fr_1fr>X<auto>/y:center',
						'/gap:6',
						'@sm:/gap:3',
						'@xs-n-below:/grid:<auto>X<1fr_1fr_1fr>/y:center'
					]}
				>
					<div class:list={['/flex:column/x:center', '/gap:3']}>
						<p>
							Available for <br />
							<span class:list={['/color:primary-alt-base', '/type:mono-body-heavy-italic']}>
								Freelance
							</span>
							Worldwide
						</p>
						<Icon name={'star-1'} class:list={['/w:4', '/h:4', '@xs-n-below:/dis:none']} />
					</div>
					<div class:list={['/flex:column/x:center', '/gap:3']}>
						<Icon name={'star-1'} class:list={['/w:4', '/h:4', '@xs-n-below:/dis:none']} />
						<p>
							Currently Working at <br />
							<span class:list={['/color:primary-alt-base', '/type:mono-body-heavy-italic']}>
								Saade Studio
							</span>
						</p>
					</div>
					<div class:list={['/flex:column/x:center', '/gap:3']}>
						<p>
							Based In
							<span class:list={['/color:primary-alt-base', '/type:mono-body-heavy-italic']}>
								Tehran, Iran
							</span>
							<br />
							Timezone
							<span class:list={['/color:primary-alt-base', '/type:mono-body-heavy-italic']}>
								±3:30
							</span>
						</p>
						<Icon name={'star-1'} class:list={['/w:4', '/h:4', '@xs-n-below:/dis:none']} />
					</div>
				</div>
			</Wrapper>

			<Wrapper>
				<Icon name={'star-4'} class:list={['/w:8', '/h:8']} />
			</Wrapper>

			<article aria-labelledby="my-hobbies" class:list={['/w:full']}>
				<h2 id="my-hobbies" sr-only>
					My hobbies
				</h2>
				<Wrapper
					class:list={['/pos:relative']}
					content-class:list={['/flex:column/x:center', '/w:115', '/gap:8']}
				>
					<Spacer class:list={['@sm:/h:12', '@xs-n-below:/dis:none']} />
					<Spacer class:list={['@md-n-below:/dis:none']} />

					<div class:list={['/pos:absolute', '/t:0', '/l:0', '/r:0']}>
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1920 1214">
							<path fill="url(#a)" fill-rule="evenodd" d="M0 287.7 80 222C160 156.5 320 25.3 480 3.5c160-22 320 65.5 480 109.3 160 43.7 320 43.7 480 65.5 160 22 320 65.6 400 87.5l80 21.9V1214H0V287.7Z" clip-rule="evenodd"/>
							<defs>
								<linearGradient id="a" x1="960" x2="960" y1="0" y2="1214" gradientUnits="userSpaceOnUse">
								<stop stop-color="#F6F2FF"/>
								<stop offset="1" stop-color="#F6F2FF" stop-opacity="0"/>
								</linearGradient>
							</defs>
						</svg>
					</div>

					<div class:list={[
						'/flex:column',
						'/w:130',
						'@xl:/w:100',
						'@lg:/w:100',
						'@md-n-below:/w:full',
						'@md:/px:8',
						'@sm:/px:5',
						'@sm-n-below:/gap:4',
						'@xs:/px:2', '@xs:/pt:12'
					]}>
						<div class:list={[
							'/flex:row/x:start/y:center', '/z:land', '/pos:relative', '/w:full', '/gap:8',
							'@sm-n-below:/gap:4',
							'@xs-n-below:/flex:column/x:center/y:center',
							'@sm:/flex:row/x:center/y:center'
						]}>
							<div class:list={['/pos:relative']}>
								<div class:list={[
									'hobbyIllustrationCircle', '/t:-2', '/l:-8',
									'@md-n-below:/scale:0.75'
								]} />
								<BetterPicture
									name="Kitten"
									alt="Illustration of a cat"
									width={368}
									height={282}
									loading="lazy"
									formats={['avif', 'webp', 'png']}
									class:list={[
										'/z:land', '/pos:relative',
										'@md:/w:30',
										'@sm:/w:20',
										'@xs-n-below:/w:25'
									]}
								/>
							</div>
							<p class:list={['/type:mono-header3-normal:1.4', '/color:primary-dark']}>
								I like to <br />
								play with
								<span class:list={['/color:primary-alt-base', '/type:mono-header3-bold']}>
									cats
								</span>
							</p>
						</div>
						<div class:list={[
							'/flex:row/x:end/y:center', '/z:land', '/pos:relative', '/w:full', '/gap:8',
							'@sm-n-below:/gap:4',
							'@sm:/flex:row/x:center/y:center',
							'@xs-n-below:/flex:column/x:center/y:center'
						]}>
							<p class:list={['/type:mono-header3-normal:1.4', '/color:primary-dark', '@sm-n-below:/order:1']}>
								I
								<span class:list={['/color:primary-alt-base', '/type:mono-header3-bold']}>
									doodle <br />
								</span>
								every time <br />
								I’m bored

							</p>
							<div class:list={['/pos:relative']}>
								<div class:list={[
									'hobbyIllustrationCircle', '/t:-2', '/r:-16',
									'@md-n-below:/scale:0.75'
								]} />
								<BetterPicture
									name="Doodle"
									alt="Illustration of a doodle notebook"
									width={336}
									height={394}
									loading="lazy"
									formats={['avif', 'webp', 'png']}
									class:list={[
										'/z:land', '/pos:relative',
										'@md:/w:30',
										'@sm:/w:20',
										'@xs-n-below:/w:25'
									]}
								/>
							</div>
						</div>
						<div class:list={[
							'/flex:row/x:start/y:center', '/z:land', '/pos:relative', '/w:full', '/gap:8',
							'@sm-n-below:/gap:4',
							'@xs-n-below:/flex:column/x:center/y:center',
							'@sm:/flex:row/x:center/y:center'
						]}>
							<div class:list={['/pos:relative']}>
								<div class:list={[
									'hobbyIllustrationCircle', '/t:2', '/l:8',
									'@md-n-below:/scale:0.75'
								]} />
								<BetterPicture
									name="Books"
									alt="Illustration of a pile of books"
									width={400}
									height={315}
									loading="lazy"
									formats={['avif', 'webp', 'png']}
									class:list={[
										'/z:land', '/pos:relative',
										'@md:/w:30',
										'@sm:/w:20',
										'@xs-n-below:/w:25'
									]}
								/>
							</div>
							<p class:list={['/type:mono-header3-normal:1.4', '/color:primary-dark']}>
								Currently <br />
								reading <br />
								<span class:list={['/color:primary-alt-base', '/type:mono-header3-bold']}>
									1984
								</span>
							</p>
						</div>
						<div class:list={[
							'/flex:row/x:end/y:center', '/z:land', '/pos:relative', '/w:full', '/gap:8',
							'@sm-n-below:/gap:4',
							'@xs-n-below:/flex:column/x:center/y:center',
							'@sm:/flex:row/x:center/y:center'
						]}>
							<p class:list={['/type:mono-header3-normal:1.4', '/color:primary-dark', '@sm-n-below:/order:1']}>
								I randomly <br />
								<span class:list={['/color:primary-alt-base', '/type:mono-header3-bold']}>
									brand <br />
								</span>
								an imaginary <br />
								product
							</p>
							<div class:list={['/pos:relative']}>
								<div class:list={[
									'hobbyIllustrationCircle', '/b:8', '/r:8',
									'@md-n-below:/scale:0.75'
								]} />
								<BetterPicture
									name="iMac"
									alt="Illustration of Apple's iMac"
									width={400}
									height={365}
									loading="lazy"
									formats={['avif', 'webp', 'png']}
									class:list={[
										'/z:land', '/pos:relative',
										'@md:/w:30',
										'@sm:/w:20',
										'@xs-n-below:/w:25'
									]}
								/>
							</div>
						</div>
					</div>
				</Wrapper>
			</article>
		</section>

		<Spacer />

		<section
			aria-labelledby="work-experiences"
			class:list={[
				'/w:full',
				'/flex:column/x:center/y:center',
				'/pos:relative',
				'/gap:8'
			]}
		>
			<h2 id="work-experiences" sr-only>
				Work experiences
			</h2>
			<Wrapper content-class:list={['/pos:relative']}>
				<div
					class:list={[
						'/grid:<1fr_1fr>X<53x>/y:center',
						'/gap:6', '/w:full',
						'@xl:/grid:<1fr_1fr>X<40x>/x:center/y:center',
						'@lg:/grid:<1fr_1fr>X<40x>/x:center/y:center',
						'@md:/grid:<1fr_1fr>X<30x>/x:center/y:end',
						'@sm:/grid:<1fr>X<auto_20x>/x:center/y:end',
						'@sm:/grid:<1fr>X<auto_30x>/x:center/y:end',
						'@sm-n-below:/gap:2',
						'@xs-n-below:/grid:<1fr>X<auto_25x>/x:center/y:end'
					]}
				>
					<p class:list={[
						'/type:display-header1-normal:1.2',
						'/color:primary-alt-base',
						'/grow:1'
					]}>
						Work <br /> experiences
					</p>
					<Icon
						name={'path-2'}
						class:list={[
							'/w:12', '/pos:absolute', '/l:-10', '/t:-10',
							'@xl:/l:10', '@xl:/t:-20',
							'@lg:/l:30', '@lg:/t:-30',
							'@md:/l:15', '@md:/t:-10', '@md:/scale:0.75',
							'@sm:/l:50', '@sm:/t:-35', '@sm:/scale:0.5',
							'@xs-n-below:/l:20', '@xs-n-below:/t:-35', '@xs-n-below:/scale:0.5'
						]}
					/>
					<div class:list={[
						'/flex:row/x:start', '/grow:1', '/shrink:0',
						'/h:full', '/pos:relative', '/w:full'
					]}>
						<BetterPicture
							name="Subway"
							alt=""
							width={1050}
							height={430}
							loading="lazy"
							formats={['avif', 'webp', 'png']}
							class:list={[
								'/pos:absolute', '/h:full', '/w:auto',
								'@sm-n-above:/l:0',
								'@sm:/l:10',
								'@xs-n-below:/l:0'
							]}
						/>
					</div>
				</div>
				<Blob color={'purple'} class:list={['/l:-80']} />
			</Wrapper>

			<ul class:list={['/flex:column', '/gap:5', '/type:center']}>
				{
					workExperiences.map((workExperience, index) => (
						<li class:list={[
							'/flex:column/x:center', '/gap:1'
						]}>
							<p class:list={['/type:mono-body-heavy', '/color:ink-dark']}>
								{ workExperience.from } - { workExperience.to }
							</p>
							<p class:list={['/type:mono-header3-bold', '/color:primary-dim']}>
								{ workExperience.name }
							</p>
							<div class:list={['/flex:row/y:center', '/gap:1']}>
								{
									workExperience.website &&
									<a
										href={workExperience.website}
										target="_blank" rel="noopener noreferrer"
										class:list={['/type:mono-caption-bold', '/color:primary-dark']}
									>
										Website
									</a>
									<DotDivider />
								}
								{
									workExperience.twitter &&
									<a
										href={workExperience.twitter}
										target="_blank" rel="noopener noreferrer"
										class:list={['/type:mono-caption-bold', '/color:primary-dark']}
									>
										Twitter
									</a>
									<DotDivider />
								}
								{
									workExperience.instagram &&
									<a
										href={workExperience.instagram}
										target="_blank" rel="noopener noreferrer"
										class:list={['/type:mono-caption-bold', '/color:primary-dark']}
									>
										Instagram
									</a>
								}
							</div>
						</li>
					))
				}
			</ul>
		</section>

		<Spacer />

		<section
			aria-labelledby="recent-works"
			class:list={[
				'/w:full',
				'/flex:column/x:center/y:center',
				'/pos:relative',
				'/gap:10'
			]}
		>
			<h2 id="recent-works" sr-only>
				My recent works
			</h2>
			<Wrapper content-class:list={['/pos:relative']}>
				<div
					class:list={[
						'/grid:<1fr_1fr>X<53x>/x:start/y:end',
						'/gap:6', '/w:full',
						'@xl:/grid:<1fr_1fr>X<40x>/x:start/y:end',
						'@lg:/grid:<1fr_1fr>X<40x>/x:start/y:end',
						'@md:/grid:<1fr_1fr>X<30x>/x:start/y:end',
						'@sm:/grid:<1fr>X<30x_auto>/x:center/y:end',
						'@sm-n-below:/gap:2',
						'@xs-n-below:/grid:<1fr>X<25x_auto>/x:center/y:center'
					]}
				>
					<div class:list={[
						'/flex:row/x:end', '/grow:1', '/shrink:0',
						'/h:full', '/w:full', '/pos:relative'
					]}>
						<BetterPicture
							name="Mon-2"
							alt=""
							width={1175}
							height={530}
							loading="lazy"
							formats={['avif', 'webp', 'png']}
							class:list={[
								'/pos:absolute', '/h:full', '/w:auto', '/r:0',
								'@sm-n-above:/r:0', '@sm-n-above:/r:0',
								'@sm:/l:-10',
								'@xs-n-below:/r:0'
							]}
						/>
					</div>
					<p class:list={[
						'/type:display-header1-normal:1.2',
						'/color:primary-alt-base',
						'/grow:1',
						'/pb:5'
					]}>
						Some of my <br /> featured works
					</p>
					<Icon
						name={'path-1'}
						class:list={[
							'/w:20', '/pos:absolute', '/r:-20', '/t:20',
							'@xl:/r:20', '@xl:/t:20',
							'@lg:/r:10', '@lg:/t:10',
							'@lg-n-below:/scale:0.75',
							'@md:/r:20', '@md:/t:-30',
							'@sm-n-below:/dis:none'
						]}
					/>
				</div>
				<Blob color={'yellow'} class:list={['/r:-80']} />
			</Wrapper>

			<Spacer class:list={['@xl-n-below:/h:8']} />

			<article aria-labelledby="chaos-control" class:list={['/w:full']}>
				<h2 id="chaos-control" sr-only>
					My Work: Chaos Control Planner
				</h2>
				<Wrapper content-class:list={['/pos:relative']}>
					<WorkDetails
						logo="chaos-control"
						logoRatio="1/1"
						logoScale={0.85}
						name="Chaos Control Planner"
					>
						<span slot="description">
							Logo, visual identity, packaging for my <strong>planning notebook</strong>
						</span>
						<span slot="target">
							Target audience: Those who want to ace their game and be in charge of their success, mainly <strong>business women</strong> and <strong>owners of small businesses</strong>
						</span>
					</WorkDetails>
					<div class:list={['glasses']} aria-hidden="true">
						<Icon name={'glasses'} class:list={[
							'/w:11', '/h:5',
							'@md:/w:9', '@md:/h:4',
							'@sm-n-below:/w:8', '@sm-n-below:/h:4'
						]} />
						<Icon name={'glasses-arrow'} class:list={[
							'/w:21', '/h:6', '/pos:absolute', '/b:-2', '/r:-35',
							'@md:/w:16', '@md:/h:5', '@md:/b:3', '@md:/r:-25',
							'@sm-n-below:/w:15', '@sm-n-below:/h:4', '@sm-n-below:/b:6', '@sm-n-below:/r:-20', '@sm-n-below:/rotate:30'
						]} />
						<span class:list={['/type:mono-body-heavy-italic:1.2', '/color:primary-alt-base']}>
							My <br /> Small <br /> Business
						</span>
					</div>
				</Wrapper>
				<Wrapper content-class:list={['/flex:column/x:center']}>
					<Gallery
						layout={'ltr'}
						images={[
							{ name: 'Chaos-Control-1', alt: 'An open chaos control, holden up in the air', formats: ['avif', 'webp', 'jpg'] },
							{ name: 'Chaos-Control-2', alt: 'Showcase of chaos control packaging', formats: ['avif', 'webp', 'jpg'] },
							{ name: 'Chaos-Control-3', alt: 'Some merchandise with chaos control logo on them', formats: ['avif', 'webp', 'jpg'] }
						]}
					/>
					<div class:list={['/flex:row/x:center', '/gap:4', '/mt:14']}>
						<a href="https://www.behance.net/gallery/120000591/Chaos-Control-Planner" target="_blank" rel="noopener noreferrer">
							See more on Behance
						</a>
					</div>
				</Wrapper>
			</article>

			<Spacer />

			<article aria-labelledby="pimpleSlayer" class:list={['/w:full']}>
				<h2 id="pimpleSlayer" sr-only>
					My Work: Pimple Slayer
				</h2>
				<Wrapper content-class:list={['/pos:relative']}>
					<Blob color={'red'} class:list={['/l:-20']} />
					<Blob color={'orange'} class:list={['/l:-60', '/t:80']} />
					<WorkDetails
						logo="pimple-slayer"
						logoRatio="3/2"
						name="Pimple Slayer"
					>
