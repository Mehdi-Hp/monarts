---
import SceneLayout from '#layouts/SceneLayout.astro';
import logo from '#images/pimple-slayer.png';
import ImagePimpleSlayerShampoo from '#images/Pimple-slayer-shampoo.jpg';
import ImagePimpleSlayerSoap from '#images/Pimple-slayer-soap.jpg';
import WorkInfo from '#components/WorkInfo.astro';
import Slideshow from '#components/Slideshow.astro';


const name = 'Pimple Slayer';
---

<SceneLayout
	title="Recent work: Pimple Slayer"
	content-class="/h:full"
>
	<WorkInfo
		logo={logo}
		name={name}
		number="01"
		description="Logo, visual identity and packaging for a skincare company"
		audience="Young adults dealing with pimples"
		type="Passion Project"
	/>
</SceneLayout>

<SceneLayout
	title="Recent work samples: Pimple Slayer"
	class:list={['/h:auto']}
>
	<Slideshow
		name="Pimple Slayer"
		mode="simple"
		images={[
			ImagePimpleSlayerShampoo,
			ImagePimpleSlayerSoap
		]}
	/>
</SceneLayout>
