---
import SceneLayout from '#layouts/SceneLayout.astro';
import logo from '#images/Yonaguni.png';
import Image1 from '#images/Yonaguni-1.jpg';
import Image2 from '#images/Yonaguni-2.jpg';
import WorkInfo from '#components/WorkInfo.astro';
import Slideshow from '#components/Slideshow.astro';


const name = 'Yonaguni yoga center';
---

<SceneLayout
	title="Recent work: Yonaguni yoga center"
	content-class="/h:full"
>
	<WorkInfo
		logo={logo}
		name={name}
		number="03"
		description="Logo, visual identity and packaging for a coffee company"
		audience="People withe the need stay awake and sane"
		type="Passion Project"
	/>
</SceneLayout>

<SceneLayout
	title="Recent work samples: Yonaguni yoga center"
	class:list={['/h:auto']}
>
	<Slideshow
		name={name}
		mode="simple"
		images={[
			Image1,
			Image2
		]}
	/>
</SceneLayout>
