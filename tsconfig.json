{
	"extends": "astro/tsconfigs/base",
	"include": [
		"**/*",
		"*"
	],
	"exclude": [
		"node_modules",
		".eslintrc.cjs"
	],
	"rootDir": "./src",
	"compilerOptions": {
		"baseUrl": ".",
		"importsNotUsedAsValues": "error",
		"types": [
			"astro/astro-jsx"
		],
		"paths": {
			"#pages/*": [
				"src/pages/*"
			],
			"#layouts/*": [
				"src/layouts/*"
			],
			"#components/*": [
				"src/components/*"
			],
			"#images/*": [
				"src/assets/images/*"
			],
			"#styles/*": [
				"src/assets/styles/*"
			]
		}
	},
}
