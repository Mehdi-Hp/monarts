{
	"extends": "astro/tsconfigs/base",
	"include": [
		"**/*.*"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"importsNotUsedAsValues": "error",
		"types": [
			"@astrojs/image/client"
		],
		"paths": {
			"#pages/*": [
				"src/pages/*"
			],
			"#layouts/*": [
				"src/layouts/*"
			],
			"#components/*": [
				"src/components/*"
			],
			"#images/*": [
				"src/assets/images/*"
			],
			"#styles/*": [
				"src/assets/styles/*"
			]
		}
	},
}
